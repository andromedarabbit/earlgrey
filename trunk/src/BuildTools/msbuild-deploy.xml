<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Deploy" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

<PropertyGroup>
	<Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>
	<BuildCondition Condition=" '$(BuildCondition)' == '' ">Rebuild</BuildCondition>
</PropertyGroup>

<Import Project="msbuild.xml"/>

<!-- 배포 폴더 -->
<PropertyGroup>
	<DeploymentDir Condition="'$(DeploymentDir)' == ''">$(OutputDir)\MSBuildExtension</DeploymentDir>
</PropertyGroup>

<Target Name="Deploy" DependsOnTargets="$(BuildCondition);">
	<MSBuild 
			Projects="$(RootDir)\msbuild-deploy-internal.xml" 
			Targets="CopyFiles" 
			Properties="DeploymentDir=$(DeploymentDir);BinDir=$(BinDir)"
		/>
		
	<CallTarget Targets="TestAlone" />
</Target>

</Project>
