<?xml version="1.0" encoding="utf-8"?>
<Project 
	InitialTargets="RunTest"
	xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
	>

<Import Project="msbuild-configurations.xml" />

<PropertyGroup>
	<ConnectionString>Data Source=.\SQLEXPRESS;Integrated Security=SSPI</ConnectionString>
	<OutputDir>$(TempDir)\GenerateSqlScriptsTest\OnlyForTableRecords</OutputDir>
</PropertyGroup>

<Target Name="RunTest">
	<RemoveDir Directories="$(OutputDir)" />
	
	<!-- scripts just table records. -->
	<GenerateSqlScripts
		ConnectionString="$(ConnectionString)"
		Database="earlgrey_test"
		ExtendedProperties="true"
		FullTextIndexes="true"
		IncludeDatabaseContext="true"
		IncludeIfNotExists="false"
		Indexes="true"
		NoCollation="true"
		NoFileGroup="true"
		Permissions="true"
		SchemaQualify="true"
		ScriptTriggers="true"
		
		CopyData="true"
		ScriptSchemas="true"
		
		Overwrite="true"
		OutputDir="$(OutputDir)"
		/>		
</Target>

</Project>